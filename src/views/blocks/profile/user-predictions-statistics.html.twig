<div class="ls-user-prediction-statistics">
  <div class="mdl-button-group mdl-button-group--block">
		<div class="mdl-button mdl-button--raised mdl-button--large mdl-button__select mdl-button--wide mdl-button--leagues">
	  	<select>
	  		<option value="0">All Leagues</option>
	  		<option value="1">Option 2</option>
	  		<option value="2">Option 3</option>
	  		<option value="3">Option 4</option>
	  	</select>
  	</div>
		<div class="mdl-button mdl-button--raised mdl-button--large mdl-button__select mdl-button--wide mdl-button--results">
	  	<select>
	  		<option value="0">All Results</option>
	  		<option value="1">Option 2</option>
	  		<option value="2">Option 3</option>
	  		<option value="3">Option 4</option>
	  	</select>
  	</div>
	</div>

	<div class="prediction-chart">
		<div class="chart">
			<span class="title">My Success Rate</span>
			<div class="radial-progress" data-progress="78">
				<div class="circle">
					<div class="mask full">
						<div class="fill"></div>
					</div>
					<div class="mask half">
						<div class="fill"></div>
						<div class="fill fix"></div>
					</div>
				</div>
				<div class="inset">
					<div class="percentage"></div>
				</div>
			</div>
		</div>
		<div class="scores">
			<div class="score score--total">
				<span class="title">Total</span>
				<span class="value">43</span>
			</div>
			<div class="score score--won">
				<span class="title">Won</span>
				<span class="value">36</span>
			</div>
			<div class="score score--lost">
				<span class="title">Lost</span>
				<span class="value">7</span>
			</div>
		</div>
	</div>
</div>
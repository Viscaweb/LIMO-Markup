{% block top_header %}
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      {% if ls_header_brand_logo %}
       <div class="mdl-layout-brand-logo"><img src="{{ basePath }}../assets/img/ls-app-logo.png" alt="{{ project }}"></div>
      {% endif %}
      <span class="mdl-layout-title">{{ page_title }}</span>
      <!-- Add spacer, to align navigation to the right -->
      <div class="mdl-layout-spacer"></div>
      <nav class="mdl-navigation">

          {% if ls_header_bell_icon %}
              <a class="mdl-navigation__link ls-toolbar-icon" href="#"><span class="icon icon-bell"></span></a>
          {% endif %}

          {% if ls_header_bell_icon_active %}
              <a class="mdl-navigation__link ls-toolbar-icon ls-active" href="#"><span class="icon icon-bell"></span></a>
          {% endif %}

      </nav>
    </div>

    {% include 'blocks/sports/match/match_score_header.html.twig' %}

    {% if ls_header_scrollable_tabs %}
      {% include 'structure/scrollable-tabs.twig' %}
    {% endif %}

    {% if ls_header_fixed_tabs %}
      {% include 'structure/fixed-tabs.twig' %}
    {% endif %}

  </header>
	{% block top_header_drawer %}
    {% include 'structure/top-header/drawer.twig' %}
	{% endblock %}
{% endblock %}

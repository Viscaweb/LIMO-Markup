{% set page_title = 'Content Page' %}
{% set ls_header_brand_logo = true %}

{# Main content #}
{% set main_content %}

    {% include 'livescore-pages/help.html.twig' %}
{% endset %}

{# Scripts init #}
{% block footer_scripts %}
    <script type="text/javascript">
        $(document).ready(function(){

            /*mdl-collapsible*/
            $(".mdl-collapsible__heading").click(function( e ){
                var collapsible = $(this).parent();
                var body = $(".mdl-collapsible__body", collapsible);

                body.slideToggle({
                    complete: function(){
                        collapsible.toggleClass("mdl-collapsible-collapsed");
                    }
                });
            });
        });
    </script>
{% endblock %}

